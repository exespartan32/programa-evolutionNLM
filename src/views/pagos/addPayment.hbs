                            <div id="containerMonthGeneral">
                                <div class="input-group mb-2" id="containerMes1">
                                    <label class="input-group-text" for="mes1">Mes Nº 1 a pagar</label>
                                    <input type="month" id="mes1" name="mes1" min="{{dataCourse.fechaInicioCurso}}"
                                        max="{{dataCourse.fechaFinCurso}}" class="form-control imput-month"
                                        name="trip-start"
                                        onchange="funValidMonth('{{dataCourse._id}}', '#mes1', '#priceMonth1' )">
                                </div>
                            </div>
                            <!-- botones de agregar y eliminar mes y pago -->
                            <div class="mb-2">
                                <button type="button"
                                    onclick="addMonth('{{dataCourse._id}}', '{{dataCourse.duracion}}')"><img
                                        src="/img/icon/plus.png" height="35px"></button>
                                <button type="button" id="deleteMonth"><img src="/img/icon/trash.png"
                                        height="35px"></button>

                            </div>

                            <!-- numero del mes como informacion oculta -->
                            <input type="hidden" name="numerMonth" id="numerMonth" value="{{numerMonth}}">
                            <!-- id del curso como informacion oculta -->
                            <input type="hidden" name="idCourse" id="idCourse" value="{{dataCourse._id}}">

                            <!-- muestra el precio del mes seleccionado -->
                            <div id="priceMonthContainer"></div>
                            <!-- muestra el si el mes tiene deuda -->
                            <div class="pb-2 mx-auto justify-content-center input-group" id="debtMonthContainer"></div>

                            <!-- imput pago realizazado por el alumno -->
                            <div id="containerPagos">
                                <div class="input-group mb-2" id="containerPagoNº1">
                                    <label for="pagoAlumno1" class="input-group-text">ingresar el pago Nº 1 del
