<div class="row border">
  {{#each cursos}}
  <div class="py-2 col-3 mx-auto ">
    <div class="rounded-3 shadow bg-success">
      <div class="modal-body p-4 text-center ">
        <h5 class="mb-0 text-white">
          <strong>{{nombreCurso}}</strong>
          </h5>
      </div>
      <div class="modal-footer flex-nowrap p-2">
        <form action="/course/editCourse/{{_id}}?_method=GET" method="POST">
          <input type="hidden" name="_method" value="GET">
          <button type="submit" class="btn btn-outline-info">
            Editar<img src="/img/icon/edit.png" alt="" height="40">
          </button>
        </form>
        <form action="/course/saveDeleteCourse/{{_id}}?_method=put" method="post">
          <input type="hidden" name="_method" value="put">
          <button class="btn  btn-outline-danger   " type="submit">
            Eliminar<img src="/img/icon/trash.png" alt="" height="40">
          </button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card text-white bg-danger mb-3 mx-auto" style="max-width: 18rem;">
    <div class="card-header">error!</div>
    <div class="card-body">
      <h5 class="card-title">No hay datos que mostrar</h5>
      <a href="/course/addCourse" class="btn btn-success btn-block">ingresar datos</a>
    </div>
  </div>
  {{/each}}
</div>