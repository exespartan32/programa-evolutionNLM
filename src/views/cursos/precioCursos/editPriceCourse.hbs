<div class="page-wrapper bg-red p-t-180 p-b-100 font-robo">
    <div class="wrapper wrapper--w960">
        <div class="card card-2">
            <div class="card-heading"></div>
            <div class="card-body">
                {{#if dataPrice}}
                <h2 class="title">Editar precio de {{dataPrice.mes}} del curso de {{dataCourse.nombre}}</h2>
                <form action="/course/saveEditPriceCourse/{{dataPrice._id}}?_method=put" method="post">
                    <input type="hidden" name="_method" value="put">

                    {{!-- 
                    <!-- imput de mes a agregar precio -->
                    <div class="input-group mb-4">
                        <label class="input-group-text" for="mes">Mes</label>
                        <input type="month" id="mes" name="mes" min="{{dataCourse.fechaInicioCurso}}"
                            max="{{dataCourse.fechaFinCurso}}" value="{{dataPrice.mes}}" class="form-control imput-month" name="trip-start">
                    </div>
                    --}}

                    <!-- imput precio del mes seleccionado -->
                    <label for="precioMes" class="form-label">precio del mes</label>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" class="form-control imput" aria-label="Amount (to the nearest dollar)"
                            id="precioMes" name="precioMes" value="{{dataPrice.precioMes}}"
                            placeholder="ingresar precio del mes">
                    </div>

                    <!-- boton de enviar datos -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Guardar Datos</button>
                    </div>
                </form>
                {{/if}}

            </div>
        </div>
    </div>
</div>
</div>