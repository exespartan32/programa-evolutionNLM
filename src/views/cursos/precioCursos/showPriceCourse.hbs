<div class="container text-center" style="padding-top: 30px;">
    {{#if dataPriceCourse}}
    <div class="row">
        <div class="table-responsive-md text-center">
            <br>
            <table class="table table-dark table-hover">
                <tr>
                    <th>Mes</th>
                    <th>Precio</th>
                    <th>Editar</th>
                </tr>
                </thead>
                <tbody id="tabla">
                    {{#each dataPriceCourse}}
                    <tr>
                        <td class="table-dark">{{mes}}</td>
                        <td class="table-info">${{precioMes}}</td>
                        <td class="table-info">
                            <form action="/course/editPriceCourse/{{_id}}?_method=GET" method="POST">
                                <input type="hidden" name="_method" value="GET">
                                <button type="submit" class="btn btn-outline-success">
                                    <img src="/img/icon/edit.png" alt="" height="40">
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{else}}
    <div class="py-2 col-3 mx-auto">
        <div class="rounded-3 shadow bg-danger">
            <div class="modal-body p-4 text-center ">
                <h5 class="mb-0 text-white card-title">
                    <strong>ERROR</strong>
                    <hr>
                    <strong>Las cuotas del curso de {{dataCourse.nombre}} no tiene ningun precio asignado</strong>
                    <br><br>
                    <a href="/course/selectCourse" class="btn btn-success btn-block">agregar el precio a las cuotas</a>
                </h5>
            </div>
        </div>
    </div>
    {{/if}}
</div>