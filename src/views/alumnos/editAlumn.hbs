{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    <img src="/img/icon/warning.png" alt="" height="40">
    {{text}}
    <img src="/img/icon/warning.png" alt="" height="40">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}


<div class="page-wrapper bg-red p-t-180 p-b-100 font-robo text-center">
    <div class="wrapper wrapper--w960">
        <div class="card mb-3 card-2">
            <div class="row g-0">
                <div class="col-md-4" id="fondo">
                    {{!-- <img src="/img/imagenes/peluqueria3.jpg" class="img-fluid rounded-start" alt="imagen"> --}}
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="title">Editar Datos de Alumno</h2>
                        <form action="/alumn/saleEditAlumn/{{variables.dataAlumn._id}}" method="post" id="formularioEditarAlumno">
                            <div id="current_date"></div>

                            <input type="hidden" id="formularioAction" value="{{variables.formularioAction}}">

                            <!-- impot nombre curso -->
                            <div class="input-group mb-4">
                                <label for="nombreAlumno" class="input-group-text">Nombre del Alumno</label>
                                <input type="text" class="form-control" id="nombreAlumno" name="nombreAlumno"
                                    placeholder="ingresar nombre del alumno" value={{variables.dataAlumn.nombre}}
                                    required>
                            </div>

                            {{!-- impot apellido alumno --}}
                            <div class="input-group mb-4">
                                <label for="apellidoAlumno" class="input-group-text">Apellido del Alumno</label>
                                <input type="text" class="form-control" id="apellidoAlumno" name="apellidoAlumno"
                                    placeholder="ingresar apellido del alumno" value={{variables.dataAlumn.apellido}}
                                    required>
                            </div>

                            {{!-- impot DNI alumno --}}
                            <div class="input-group mb-4">
                                <label for="dniAlumno" class="input-group-text">DNI del Alumno</label>
                                <input type="number" class="form-control" id="dniAlumno" name="dniAlumno"
                                    placeholder="ingresar DNI del alumno" value={{variables.dataAlumn.DNI}} required>
                            </div>
                            {{!-- seleccion de curso --}}
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="cursos" id="labelCurso">Curso Activo</label>
                                <select class="form-select" id="cursos" name="cursos">
                                    {{#if variables.cursoActualAlumno}}
                                    <option value={{{variables.cursoActualAlumno._id}}}>
                                        {{{variables.cursoActualAlumno.nombre}}}
                                    </option>
                                    {{/if}}

                                    {{#each variables.courses}}
                                    <option value={{{_id}}}>
                                        {{{nombre}}}
                                    </option>
                                    {{/each}}

                                </select>
                            </div>

                            <input type="hidden" id="cursoActivoOriginal" name="cursoActivoOriginal" value="{{variables.cursoActualAlumno._id}}">
                            <input type="hidden" id="datosAlumnoOriginal" name="datosAlumnoOriginal" value="{{variables.dataAlumnStr}}">

                            <br>
                            {{!-- boton de enviar datos --}}
                            <div class="d-grid pt-4">
                                <button type="submit" class="btn btn-primary"><img src="/img/icon/save.png" alt=""
                                        height="27">
                                    Guardar Datos
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>