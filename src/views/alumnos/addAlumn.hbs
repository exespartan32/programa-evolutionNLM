{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    <img src="/img/icon/warning.png" alt="" height="40">
    {{text}}
    <img src="/img/icon/warning.png" alt="" height="40">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

{{#if dataCourses}}
<div class="page-wrapper bg-red p-t-180 p-b-100 font-robo text-center">
    <div class="wrapper wrapper--w960">
        <div class="card mb-3 card-2">
            <div class="row g-0">
                <div class="col-md-4" id="fondo">
                    {{!-- <img src="/img/imagenes/peluqueria3.jpg" class="img-fluid rounded-start" alt="imagen"> --}}
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="title">Agregar nuevo Alumno</h2>
                        <form action="/alumn/saveAlumn" method="post" id="formularioAgregarAlumno" >
                            <div id="current_date"></div>

                            <!-- impot nombre curso -->
                            <div class="input-group mb-4">
                                <label for="nombreAlumno" class="input-group-text">Nombre del Alumno</label>
                                <input type="text" class="form-control" id="nombreAlumno" name="nombreAlumno"
                                    placeholder="ingresar nombre del alumno" required>
                            </div>

                            {{!-- impot apellido alumno --}}
                            <div class="input-group mb-4">
                                <label for="apellidoAlumno" class="input-group-text">Apellido del Alumno</label>
                                <input type="text" class="form-control" id="apellidoAlumno" name="apellidoAlumno"
                                    placeholder="ingresar apellido del alumno" required>
                            </div>

                            {{!-- impot DNI alumno --}}
                            <div class="input-group mb-4">
                                <label for="dniAlumno" class="input-group-text">DNI del Alumno</label>
                                <input type="number" class="form-control" id="dniAlumno" name="dniAlumno"
                                    placeholder="ingresar DNI del alumno" required>
                            </div>

                            {{!-- seleccion de curso --}}
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="nombreCurso">Curso</label>

                                <select class="form-select" id="nombreCurso" name="nombreCurso">
                                    {{!-- <option selected> - </option> --}}
                                    {{#each dataCourses}}
                                    <option value={{{nombre}}}>{{{nombre}}}</option>
                                    {{/each}}
                                </select>

                            </div>


                            <br>
                            {{!-- boton de enviar datos --}}
                            <div class="d-grid pt-4">
                                <button type="submit" class="btn btn-primary"><img src="/img/icon/save.png" alt=""
                                        height="27">
                                    Guardar Datos
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{{else}}
  <div class="py-2 col-3 mx-auto">
    <div class="rounded-3 shadow bg-danger">
      <div class="modal-body p-4 text-center ">
        <h5 class="mb-0 text-white card-title">
          <strong>ERROR</strong>
          <hr>
          <strong>No hay ningun curso en existencia</strong>
          <br><br>
          <a href="/course/addCourse" class="btn btn-success btn-block">ingresar datos</a>
        </h5>
      </div>
    </div>
  </div>
{{/if}}